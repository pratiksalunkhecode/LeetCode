class Solution {
    public static int findUnion(int a[], int b[]) {
        
        int m = a.length;
        int n = b.length;
        
         Set<Integer> hs = new HashSet<Integer>();
         
        for(int i = 0; i < m; i++)
          hs.add(a[i]);
        for(int i = 0; i < n; i++)
          hs.add(b[i]);
          
        return hs.size();
        
    }
}
